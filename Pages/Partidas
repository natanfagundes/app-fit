import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Input } from "@/components/ui/input";
import { Calendar, MapPin, Users, Search, Trophy, CheckCircle2, Clock } from "lucide-react";
import { toast } from "sonner";

export default function Partidas() {
  const queryClient = useQueryClient();
  const [searchTerm, setSearchTerm] = useState('');
  const [user, setUser] = useState(null);

  React.useEffect(() => {
    base44.auth.me().then(setUser).catch(() => {});
  }, []);

  const { data: matches = [], isLoading } = useQuery({
    queryKey: ['available-matches'],
    queryFn: () => base44.entities.TeamRequest.filter({ status: 'aberto' }, '-event_date'),
    initialData: [],
  });

  const confirmParticipationMutation = useMutation({
    mutationFn: async (match) => {
      const user = await base44.auth.me();
      
      if (!user.subscription_plan_id || user.subscription_status !== 'active') {
        throw new Error('Voc√™ precisa ter um plano ativo para participar das partidas');
      }

      // Get venue info
      const venues = await base44.entities.Venue.list();
      const venue = venues[0]; // You might want to link match to specific venue

      await base44.entities.CheckIn.create({
        user_email: user.email,
        venue_id: venue?.id || 'campo_1',
        venue_name: match.event_location,
        check_in_date: new Date().toISOString(),
        activity_type: match.event_name,
      });

      const existingApplicants = match.applicants || [];
      const newApplicants = [
        ...existingApplicants,
        {
          email: user.email,
          name: user.full_name,
          applied_at: new Date().toISOString(),
        }
      ];

      await base44.entities.TeamRequest.update(match.id, {
        applicants: newApplicants,
        positions_needed: Math.max(0, match.positions_needed - 1),
        status: match.positions_needed <= 1 ? 'preenchido' : 'aberto',
      });

      await base44.auth.updateMe({
        check_ins_used_this_month: (user.check_ins_used_this_month || 0) + 1,
        total_check_ins: (user.total_check_ins || 0) + 1,
      });
    },
    onSuccess: () => {
      toast.success('Partida confirmada! Nos vemos no campo! ‚öΩ');
      queryClient.invalidateQueries(['available-matches']);
      queryClient.invalidateQueries(['recent-checkins']);
    },
    onError: (error) => {
      toast.error(error.message);
    },
  });

  const filteredMatches = matches.filter(match =>
    match.event_name.toLowerCase().includes(searchTerm.toLowerCase()) ||
    match.event_location.toLowerCase().includes(searchTerm.toLowerCase()) ||
    match.team_name?.toLowerCase().includes(searchTerm.toLowerCase())
  );

  const upcomingMatches = filteredMatches.filter(m => new Date(m.event_date) >= new Date());
  const pastMatches = filteredMatches.filter(m => new Date(m.event_date) < new Date());

  return (
    <div className="p-6 md:p-10 space-y-8">
      <div className="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
          <h1 className="text-3xl md:text-4xl font-bold text-slate-800 mb-2">‚öΩ Partidas Dispon√≠veis</h1>
          <p className="text-slate-600">Encontre um time que est√° precisando de jogadores</p>
        </div>
      </div>

      <Card className="border-none shadow-lg bg-white/80 backdrop-blur-sm">
        <CardContent className="p-6">
          <div className="relative">
            <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-slate-400" />
            <Input
              placeholder="Buscar por nome, local ou time..."
              value={searchTerm}
              onChange={(e) => setSearchTerm(e.target.value)}
              className="pl-10"
            />
          </div>
        </CardContent>
      </Card>

      {user?.subscription_status !== 'active' && (
        <Card className="border-none shadow-lg bg-gradient-to-r from-yellow-50 to-orange-50 border-l-4 border-orange-400">
          <CardContent className="p-6">
            <div className="flex items-start gap-4">
              <Trophy className="w-6 h-6 text-orange-500 flex-shrink-0 mt-1" />
              <div>
                <h3 className="font-bold text-orange-900 mb-2">Assine para Jogar</h3>
                <p className="text-orange-800 text-sm mb-4">
                  Voc√™ precisa de um plano ativo para participar das partidas
                </p>
                <Button className="bg-orange-500 hover:bg-orange-600">
                  Ver Planos
                </Button>
              </div>
            </div>
          </CardContent>
        </Card>
      )}

      <div className="space-y-8">
        <div>
          <h2 className="text-2xl font-bold text-slate-800 mb-6">üî• Pr√≥ximas Partidas</h2>
          {upcomingMatches.length === 0 ? (
            <Card className="border-none shadow-lg bg-white/80 backdrop-blur-sm">
              <CardContent className="p-12 text-center">
                <Trophy className="w-16 h-16 mx-auto mb-4 text-slate-300" />
                <p className="text-slate-500">Nenhuma partida dispon√≠vel no momento</p>
              </CardContent>
            </Card>
          ) : (
            <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
              {upcomingMatches.map((match) => {
                const hasApplied = match.applicants?.some(a => a.email === user?.email);
                const isToday = new Date(match.event_date).toDateString() === new Date().toDateString();

                return (
                  <Card key={match.id} className="border-none shadow-lg bg-white hover:shadow-xl transition-all">
                    <CardHeader className="border-b border-slate-100 bg-gradient-to-r from-green-50 to-blue-50">
                      <div className="flex items-start justify-between">
                        <div className="flex-1">
                          <CardTitle className="text-xl mb-2">{match.event_name}</CardTitle>
                          <div className="flex flex-wrap gap-2">
                            <Badge className="bg-green-100 text-green-700 border-green-200">
                              {match.team_name}
                            </Badge>
                            {isToday && (
                              <Badge className="bg-red-100 text-red-700 border-red-200">
                                HOJE
                              </Badge>
                            )}
                            <Badge className="bg-blue-100 text-blue-700 border-blue-200">
                              {match.skill_level}
                            </Badge>
                          </div>
                        </div>
                        <div className="w-20 h-20 rounded-2xl bg-gradient-to-br from-green-500 to-blue-500 flex flex-col items-center justify-center text-white">
                          <Users className="w-8 h-8 mb-1" />
                          <span className="font-bold text-lg">{match.positions_needed}</span>
                          <span className="text-xs">faltam</span>
                        </div>
                      </div>
                    </CardHeader>

                    <CardContent className="p-6 space-y-4">
                      {match.description && (
                        <p className="text-slate-600">{match.description}</p>
                      )}

                      <div className="space-y-3">
                        <div className="flex items-center gap-3 text-slate-700">
                          <div className="w-10 h-10 rounded-lg bg-green-100 flex items-center justify-center">
                            <Calendar className="w-5 h-5 text-green-600" />
                          </div>
                          <div>
                            <p className="text-sm text-slate-500">Data</p>
                            <p className="font-semibold">
                              {new Date(match.event_date).toLocaleDateString('pt-BR', {
                                weekday: 'long',
                                day: '2-digit',
                                month: 'long',
                              })}
                            </p>
                          </div>
                        </div>

                        <div className="flex items-center gap-3 text-slate-700">
                          <div className="w-10 h-10 rounded-lg bg-blue-100 flex items-center justify-center">
                            <Clock className="w-5 h-5 text-blue-600" />
                          </div>
                          <div>
                            <p className="text-sm text-slate-500">Hor√°rio</p>
                            <p className="font-semibold">
                              {new Date(match.event_date).toLocaleTimeString('pt-BR', {
                                hour: '2-digit',
                                minute: '2-digit',
                              })}
                            </p>
                          </div>
                        </div>

                        <div className="flex items-center gap-3 text-slate-700">
                          <div className="w-10 h-10 rounded-lg bg-purple-100 flex items-center justify-center">
                            <MapPin className="w-5 h-5 text-purple-600" />
                          </div>
                          <div className="flex-1 min-w-0">
                            <p className="text-sm text-slate-500">Local</p>
                            <p className="font-semibold truncate">{match.event_location}</p>
                          </div>
                        </div>
                      </div>

                      {match.applicants && match.applicants.length > 0 && (
                        <div className="pt-4 border-t border-slate-100">
                          <p className="text-sm text-slate-600 mb-2">
                            {match.applicants.length} {match.applicants.length === 1 ? 'jogador confirmado' : 'jogadores confirmados'}
                          </p>
                          <div className="flex -space-x-2">
                            {match.applicants.slice(0, 5).map((applicant, idx) => (
                              <div
                                key={idx}
                                className="w-8 h-8 rounded-full bg-gradient-to-br from-green-400 to-blue-400 border-2 border-white flex items-center justify-center"
                                title={applicant.name}
                              >
                                <span className="text-white text-xs font-semibold">
                                  {applicant.name?.[0]?.toUpperCase()}
                                </span>
                              </div>
                            ))}
                            {match.applicants.length > 5 && (
                              <div className="w-8 h-8 rounded-full bg-slate-200 border-2 border-white flex items-center justify-center">
                                <span className="text-slate-600 text-xs font-semibold">
                                  +{match.applicants.length - 5}
                                </span>
                              </div>
                            )}
                          </div>
                        </div>
                      )}

                      <Button
                        className={`w-full font-semibold ${
                          hasApplied
                            ? 'bg-green-600 hover:bg-green-700'
                            : 'bg-gradient-to-r from-green-500 to-blue-500 hover:from-green-600 hover:to-blue-600'
                        }`}
                        onClick={() => confirmParticipationMutation.mutate(match)}
                        disabled={confirmParticipationMutation.isPending || hasApplied || user?.subscription_status !== 'active'}
                      >
                        {hasApplied ? (
                          <>
                            <CheckCircle2 className="w-5 h-5 mr-2" />
                            Voc√™ est√° confirmado!
                          </>
                        ) : confirmParticipationMutation.isPending ? (
                          'Confirmando...'
                        ) : (
                          <>
                            <Trophy className="w-5 h-5 mr-2" />
                            Confirmar Presen√ßa
                          </>
                        )}
                      </Button>
                    </CardContent>
                  </Card>
                );
              })}
            </div>
          )}
        </div>
      </div>
    </div>
  );
}